<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="10.0"
    xmlns="http://javafx.com/javafx/17.0.1"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.HomeController">
    <Text text="Home Page" style="-fx-font-size: 24px;"/>
    <ListView fx:id="passwordListView"/>
    <Button text="Add Password" onAction="#handleAddPassword"/>
    <Button text="Update Password" onAction="#handleUpdatePassword"/>
    <Button text="Delete Password" onAction="#handleDeletePassword"/>
    <Button text="Logout" onAction="#handleLogout"/>
</VBox>